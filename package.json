{
  "name": "gitea-drone",
  "version": "0.0.1",
  "private": true,
  "main": "src/app/bin/gitea-drone.ts",
  "scripts": {
    "start": "node dist/bin/gitea-drone.js",
    "build:prod": "tsc --sourceMap false",
    "develop": "nodemon",
    "clean": "rm -rf dist",
    "test": "mocha",
    "test:coverage": "nyc mocha"
  },
  "nodemonConfig": {
    "watch": [
      "src/app"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "ts-node ./src/app/bin/gitea-drone.ts"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "src/**/*.spec.ts",
    "require": "ts-node/register",
    "exit": true
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "include": [
      "src/app"
    ],
    "exclude": [
      "src/app/bin"
    ],
    "all": true,
    "reporter": [
      "text",
      "lcov"
    ]
  },
  "dependencies": {
    "@overnightjs/core": "^1.6.9",
    "dotenv": "^8.2.0",
    "express": "^4.13.3",
    "morgan": "^1.6.1",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/express": "^4.17.1",
    "@types/mocha": "^5.2.7",
    "@types/morgan": "^1.7.37",
    "@types/request": "^2.48.3",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "mocha": "^6.2.2",
    "nodemon": "^1.19.4",
    "nyc": "^14.1.1",
    "supertest": "^4.0.2",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.4"
  }
}
